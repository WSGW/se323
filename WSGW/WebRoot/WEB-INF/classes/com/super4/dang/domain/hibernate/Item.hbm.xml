<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.super4.dang.domain">
    <class name="Item" table="d_d_item" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="orderId" type="integer">
            <column name="order_id" not-null="true" />
        </property>
        <property name="productId" type="integer">
            <column name="product_id" not-null="true" />
        </property>
        <property name="productName" type="string">
            <column name="product_name" />
        </property>
        <property name="dangPrice" type="double">
            <column name="dang_price" precision="22" scale="0" not-null="true" />
        </property>
        <property name="num" type="integer">
            <column name="product_num" not-null="true" />
        </property>
        <property name="amount" type="double">
            <column name="amount" precision="22" scale="0" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
